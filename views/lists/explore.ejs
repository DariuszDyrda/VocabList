<% include ../partials/header %>
<div class="ui container">
    <h2 class="ui center aligned header">
        <div class="content">
            Explore
        </div>
    </h2>
    <div class="ui centered stackable link cards">
        <% lists.forEach(list => { %>
        <% if(!user || (user && list.author.username != user.username))  { %>
        <a class="card" href="/index/<%= list._id %>">
            <div class="content">
                <div class="header">
                    <%= list.name %><span style="float: right">
                        <%= list.language %></span></div>
                <div class="description">
                    <%= list.description %>
                </div>
            </div>
            <div class="ui bottom attached green button">
                <i class="add icon"></i>
                Show more
            </div>
        </a>
        <% } %>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>